<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GitrepositoryActivity">

    <!-- 내 프로필 정보 -->
    <TextView
            android:id="@+id/tv_gitrepository_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOPT"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#EE3333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <ImageView
            android:id="@+id/iv_gitrepository_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/chohee"
            app:layout_constraintTop_toBottomOf="@+id/tv_gitrepository_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp"/>
    <TextView
            android:id="@+id/tv_gitrepository_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="choheeis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_gitrepository_profile"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
    <TextView
            android:id="@+id/tv_gitrepository_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chohee Kim"
            android:textSize="25sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/tv_gitrepository_userid"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"/>
    <TextView
            android:id="@+id/tv_gitrepository_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="android developer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_gitrepository_username"
            android:layout_marginLeft="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_gitrepository"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_gitrepository_description"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp">

    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>